{
  "extends": "../../config/tsconfig.app.json",
  "include": ["src/**/*.tsx", "src/**/*.ts", "next-env.d.ts"],
  "references": [{ "path": "../../libs" }],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": ".ts-out",
    "paths": {
      "libs/*": ["libs/*"],
      "components/*": ["apps/dashboard/src/components/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
