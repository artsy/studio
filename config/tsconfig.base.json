{
  "compilerOptions": {
    "pretty": true,
    "lib": ["dom", "dom.iterable", "esnext"],

    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmitOnError": true,
    "incremental": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,

    "baseUrl": "../",
    "paths": {
      "libs/*": ["libs/*"]
    }
  }
}
