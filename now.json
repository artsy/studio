{
  "version": 2,
  "build": {
    "env": {
      "BUILDING_FOR_NOW": "true"
    }
  },
  "builds": [
    { "src": "apps/dashboard/package.json", "use": "@now/next" },
    { "src": "apps/studio/package.json", "use": "@now/next" },
    { "src": "apps/team/package.json", "use": "@now/next" }
  ],
  "routes": [
    { "src": "/dashboard(.*)", "dest": "apps/dashboard/$1" },
    {
      "src": "/team/_next/(.*)/pages/team/(.*)",
      "dest": "apps/team/_next/$1/pages/$2"
    },
    { "src": "/team(.*)", "dest": "apps/team/$1" },
    { "src": "(.*)", "dest": "apps/studio/$1" }
  ],
  "env": {
    "SHEETS_URL": "@studio-sheets-url",
    "ACCESS_KEY_ID": "@studio-access-key-id",
    "SECRET_ACCESS_KEY": "@studio-secret-access-key",
    "REGION": "@studio-region",
    "IMAGE_BUCKET": "@studio-image-bucket",
    "APP_ID": "@studio-app-id",
    "APP_SECRET": "@studio-app-secret",
    "COOKIE_SECRET": "@studio-cookie-secret"
  }
}
